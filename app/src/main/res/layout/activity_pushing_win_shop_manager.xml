<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.live.PushingWinShopManagerActivity">

    <View
        android:id="@+id/llTopBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/ivTitleBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/transparent"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:scaleType="center"
            android:src="@mipmap/ic_back_black"
            tools:ignore="ContentDescription" />

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/stlLivingWinShop"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_centerInParent="true"
            app:tl_indicator_color="@color/homeBtnSelectTextColor"
            app:tl_indicator_corner_radius="@dimen/dp_2"
            app:tl_indicator_height="@dimen/dp_2"
            app:tl_indicator_width="@dimen/dp_12"
            app:tl_tab_space_equal="false"
            app:tl_tab_width="@dimen/dp_70"
            app:tl_textBold="SELECT"
            app:tl_textSelectColor="@color/textColorPrimary29"
            app:tl_textUnselectColor="@color/textColorPrimary29"
            app:tl_textsize="@dimen/sp_12" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpLivingWinShop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>